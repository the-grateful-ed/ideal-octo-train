{
  "$schema": "https://beta.frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "publishedAt",
          "name": "publishedAt",
          "default": "{{now}}",
          "type": "datetime"
        },
        {
          "title": "updatedAt",
          "name": "updatedAt",
          "default": "{{now}}",
          "type": "datetime"
        },
        {
          "title": "image",
          "name": "image",
          "type": "image"
        },
        {
          "title": "author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "isPublished",
          "name": "isPublished",
          "type": "boolean"
        }
      ]
    },
    {
      "name": "Page",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Date",
          "name": "date",
          "type": "datetime"
        }
      ]
    },
    {
      "name": "Post",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags",
          "single": true
        },
        {
          "title": "Category",
          "name": "category",
          "type": "categories"
        },
        {
          "title": "publishedAt",
          "name": "publishedAt",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "updatedAt",
          "name": "updatedAt",
          "type": "datetime",
          "default": "{{now}}",
          "isModifiedDate": true
        },
        {
          "title": "image",
          "name": "image",
          "type": "image"
        },
        {
          "title": "author",
          "name": "author",
          "type": "string",
          "single": true
        },
        {
          "title": "isPublished",
          "name": "isPublished",
          "type": "boolean"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "next",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.preview.host": "http://localhost:3000",
  "frontMatter.content.pageFolders": [
    {
      "title": "pages",
      "path": "[[workspace]]/content/pages"
    },
    {
      "title": "posts",
      "path": "[[workspace]]/content/posts"
    }
  ]
}